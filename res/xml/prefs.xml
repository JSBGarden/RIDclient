<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
  <EditTextPreference
      android:title="Ip Address"
      android:key="ip"
      android:summary="Enter the ip address"     
      ></EditTextPreference> 
      <EditTextPreference
      android:title="Port"
      android:key="port"
      android:summary="Enter the port number"     
      ></EditTextPreference>
      <CheckBoxPreference
          android:title="Remember IP and Port Number"
          android:defaultValue="true"
          android:key="checkbox"
          android:summary="Check this box to remember ip address and port number"
         />
      <CheckBoxPreference
          android:title="Music"
          android:defaultValue="true"
          android:key="music"
          android:summary="Check to enable music"/>
      
		<CheckBoxPreference
		    android:title="Haptic Feedback"
		    android:key="vibrate"
		    android:defaultValue="true"
		    android:summary="Check to enable haptic feedback"/>
		    
		
</PreferenceScreen>
