<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:orientation="vertical">

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="25" >

			<ImageButton
			    android:id="@+id/ibtnVLCPlay"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:scaleType="center"
			    android:src="@drawable/vvv" />

			<ImageButton
			    android:id="@+id/ibtnVLCStop"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:src="@drawable/btnvlcstop" />

		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="25" >

			<ImageButton
			    android:id="@+id/ibtnVLCPrevious"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:src="@drawable/btnvlcprevious" />

			<ImageButton
			    android:id="@+id/ibtnVLCNext"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:src="@drawable/btnvlcnext" />

		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="25" >

			<ImageButton
			    android:id="@+id/ibtnVLCVolup"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:src="@drawable/btnvlcvolup" />

			<ImageButton
			    android:id="@+id/ibtnVLCVoldown"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:scaleType="center"
			    android:src="@drawable/btnvlcvoldown" />

		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="25"
		    android:orientation="horizontal" >

			<ImageButton
			    android:id="@+id/ibtnVLCmute"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:src="@drawable/btnvlcmute" />

			<ImageButton
			    android:id="@+id/ibtnVLCFullscreen"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="25"
			    android:src="@drawable/display" />

		</LinearLayout>

	</LinearLayout>

</FrameLayout>